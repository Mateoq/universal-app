{
  "name": "universal-react-app",
  "version": "0.2.0",
  "description": "Boilerplate to create universal apps with node and react",
  "main": "./src/server/index.js",
  "scripts": {
    "dev": "concurrently --kill-others -p \"[{name}]\" -n \"BUILD,API,SERVER\" -c \"yellow.bold,green.bold,blue.bold\" \"yarn run dev:build\" \"yarn run dev:api\" \"yarn run dev:server\"",
    "dev:build": "set NODE_ENV=development && babel-node ./src/server/dev-server.js",
    "dev:server": "set NODE_ENV=development && nodemon --exec babel-node ./src/server/index.js --watch ./src ./build",
    "dev:api": "set NODE_ENV=development && nodemon --exec babel-node ./src/server/api-server.js --watch src/server",
    "build": "NODE_ENV=production webpack --verbose --colors --display-error-details --config ./webpack/production/webpack.config.js",
    "prod": "npm run prod:start",
    "prod:start": "concurrently --kill-others -p \"[{name}]\" -n \"API,SERVER\" -c \"green.bold,blue.bold\" \"npm run prod:api\" \"npm run prod:server\"",
    "prod:server": "NODE_ENV=production babel-node ./src/server/index.js",
    "prod:api": "NODE_ENV=production babel-node ./src/server/api-server.js",
    "lint": "eslint ./src/ -c .eslintrc --ignore-pattern '!node_modules/*'",
    "esdoc": "esdoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mateoq/universal-app.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mateoq/universal-app/issues"
  },
  "homepage": "https://github.com/Mateoq/universal-app#readme",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "nodemon": "^1.11.0",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.1.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0"
  },
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.24.1",
    "blaze": "^3.2.2",
    "body-parser": "^1.15.2",
    "clean-webpack-plugin": "^0.1.16",
    "compression": "^1.6.2",
    "concurrently": "^3.1.0",
    "css-loader": "^0.28.0",
    "esdoc": "^0.5.2",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-class-property": "^1.0.6",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "history": "^4.6.1",
    "http-proxy": "^1.16.2",
    "jest": "^19.0.2",
    "mdi": "^1.9.33",
    "node-base64-image": "^1.0.3",
    "node-emoji": "^1.5.1",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.2.0",
    "pretty-error": "^2.0.3",
